<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.tobiasth.idatt2001.postalregistry.AppController">
   <center>
      <TableView fx:id="listTable" minWidth="400.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" />
         </BorderPane.margin></TableView>
   </center>
   <top>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="searchField" prefHeight="40.0" promptText="Type here to search">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="50.0" />
               </padding>
               <StackPane.margin>
                  <Insets right="40.0" />
               </StackPane.margin>
            </TextField>
            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER_LEFT">
               <image>
                  <Image url="@img/search.png" />
               </image>
               <StackPane.margin>
                  <Insets left="10.0" />
               </StackPane.margin>
            </ImageView>
            <Button fx:id="clearButton" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: none;" StackPane.alignment="CENTER_RIGHT">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/clear.png" />
                     </image>
                  </ImageView>
               </graphic>
               <StackPane.margin>
                  <Insets right="40.0" />
               </StackPane.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="helpButton" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: none;" StackPane.alignment="CENTER_RIGHT">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/help.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="-3.0" left="-3.0" right="-3.0" top="-3.0" />
               </padding>
               <StackPane.margin>
                  <Insets right="3.0" />
               </StackPane.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </StackPane>
   </top>
